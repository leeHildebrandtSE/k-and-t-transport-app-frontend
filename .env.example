# Environment Configuration for K & T Transport App
# Copy this file to .env and update with your actual values

# API Configuration
API_BASE_URL=http://localhost:8080/api
WEBSOCKET_URL=ws://localhost:8080

# Google Maps API Key (required for maps functionality)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# App Configuration
APP_NAME=K & T Transport
APP_VERSION=1.0.0

# Push Notifications (if using external service)
PUSH_NOTIFICATION_KEY=your_push_notification_key

# Development Configuration
NODE_ENV=development
DEBUG=true

# Backend Service URLs
AUTH_SERVICE_URL=http://localhost:8080/api/auth
BOOKING_SERVICE_URL=http://localhost:8080/api/bookings
DRIVER_SERVICE_URL=http://localhost:8080/api/driver
ADMIN_SERVICE_URL=http://localhost:8080/api/admin

# Real-time Tracking
TRACKING_UPDATE_INTERVAL=5000
LOCATION_ACCURACY_THRESHOLD=10

# Payment Configuration (if integrated)
PAYMENT_GATEWAY_URL=https://api.paymentprovider.com
PAYMENT_GATEWAY_KEY=your_payment_gateway_key

# File Upload Configuration
MAX_UPLOAD_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Session Configuration
SESSION_TIMEOUT=3600000
REFRESH_TOKEN_EXPIRY=604800000